<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/0001-head-default') %>
  <title>Shapearoo - Shop</title>
</head>

<body>

  <div class="container">

    <%- include('partials/1001-browse-header-nav') %>
    <%- include('partials/1002-browse-header-search') %>

    <div class="nav-back-container">
      <ion-icon class="medium-icon" name="chevron-back-outline"></ion-icon>
      <div class="nav-link"> back to search </div>
    </div>

    <div class="browse-shops">

      <% for(i = 0; i < shop.length; i++) { %>
      <div class="browse-shops-item">
        <div class="browse-shops-item-image" onclick="redirect('/search/shop/<%= shop[i].id %>')">
          <img class="default-image-wrap default-image-hover" src="<%= shop[i].image_url %>" alt="">
        </div>
        <div class="browse-shops-item-information">
          <div class="browse-shops-item-name default-link-hover" onclick="redirect('/search/shop/<%= shop[i].id %>')">
            <%= shop[i].shop_name %>
          </div>
          <div class="browse-shops-item-rating">
            <div class="browse-shops-item-rating-star">
              <ion-icon name="star"></ion-icon>
              <ion-icon name="star"></ion-icon>
              <ion-icon name="star"></ion-icon>
              <ion-icon name="star-half-outline"></ion-icon>
              <ion-icon name="star-outline"></ion-icon>
            </div>
            <div class="browse-shops-item-rating-text">
              (16) Ratings, (50) Prints
            </div>
          </div>
          <div class="browse-shops-item-address">
            <%= shop[i].shop_address %>
          </div>
          <div class="browse-shops-item-filament">
            <% for(j = 0; j < shop[i].filaments.length; j++) {%>
            <div><%= shop[i].filaments[j] %></div>
            <% } %>
          </div>
          <div class="browse-shops-item-price">
            <div>$<%= shop[i].min_price %>/gr</div>
            <div>-</div>
            <div>$<%= shop[i].max_price %>/gr</div>
          </div>
          <div class="browse-shops-item-delivery">
            <div>pickup</div>
            <div>|</div>
            <div>delivery</div>
          </div>

          <div class="browse-shops-item-buttons">
            <button class="browse-shops-item-btn default-button">Select Shop</button>
            <button class="browse-shops-item-btn default-button" onclick="redirect('/search/shop/<%= shop[i].id %>')">Profile</button>

          </div>

        </div>
      </div>

      <% } %>




    </div>


    <div class="default-footer">
    </div>



</body>

</html>