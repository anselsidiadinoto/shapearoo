<div class="browse-search">
  <div class="browse-search-bar">
    <input class="default-text-input" type="text" placeholder="lookup shapes...">
    <button class="default-button">Search</button>
  </div>
  <div class="browse-search-sort">
    <div class="browse-search-sort-text">Sort by:</div>
    <select class="default-select" name="category" id="sort-category">
      <option value="">category</option>
      <option value="handmade">handmade</option>
      <option value="resin">resin-print</option>
      <option value="artisenal">artisenal</option>
    </select>
    <select class="default-select" name="price" id="sort-price">
      <option value="">price</option>
      <option value="least">least pricey</option>
      <option value="most">most pricey</option>
    </select>
    <select class="default-select" name="location" id="sort-location">
      <option value="">location</option>
      <option value="least">closest</option>
      <option value="most">furthest</option>
    </select>
    <select class="default-select" name="shipping" id="sort-shipping">
      <option value="">shipping</option>
      <option value="fastest">fastest</option>
      <option value="pickup">pickup</option>
      <option value="1-3">1 - 3 days</option>
      <option value="3-7">3 - 7 days</option>
      <option value="7-15">7 - 15 days</option>
      <option value="15-30">15 - 30 days</option>
      <option value=">30">> 30 days</option>
    </select>

  </div>
  <div class="browse-search-cart">
    cart: 4 items
  </div>

</div>